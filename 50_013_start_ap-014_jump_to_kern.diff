 	unsigned long long *kernel_start, unsigned long long *stack_base,
@@ -29,7 +39,7 @@
 	unsigned long long fs_start);
 void put_n_bytes(unsigned char *addr, unsigned int num);
 void put_param(unsigned short *name, unsigned long long val);
