+		pi.fs_start = (void *)fs_start;
+	else
+		pi.fs_start = NULL;
 	unsigned long long nproc, nproc_en;
 	status = MSP->GetNumberOfProcessors(MSP, &nproc, &nproc_en);
 	assert(status, L"MSP->GetNumberOfProcessors");
